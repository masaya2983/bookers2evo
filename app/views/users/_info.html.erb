<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>


 <tr><td><%= link_to "follows", user_followings_path(user) %>
 <%= user.followings.count %> </tr></th>
 <tr><th><%= link_to "followers", user_followers_path(user) %>
<%= user.followers.count %> </tr></th>

  </tr>
</table>

 <% if current_user.following?(user) %>
        <td>   <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete,class: "btn btn-sm btn-info" %></td>
        <% else %>
         <td><%= link_to "フォローする", user_relationships_path(user.id), method: :post,class: "btn btn-sm btn-info" %></td>
       <% end %>

<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>